<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="container">
      <h1>Blog</h1>
      <a href="/newpost">Create New Post</a>
      <hr />
      <% posts.forEach(post => { %>
      <div class="post">
        <h2><%= post.title %></h2>
        <p class="post-content"><%= post.content %></p>
      </div>
      <% }); %>
    </div>
  </body>
</html>
